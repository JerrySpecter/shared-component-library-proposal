{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "rule-empty-line-before": [ "always-multi-line", {
            "except": ["first-nested"],
            "ignore": ["after-comment"]
        } ],
        "color-hex-length": "long",
        "at-rule-no-unknown":[ true,
            { "ignoreAtRules": ["/^include/", "custom"] }
        ]
    }
}
